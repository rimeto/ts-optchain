{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015",
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
